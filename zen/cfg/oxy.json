{
    "blocktime": 15,
    "delegates": 201, 

    "rebuild": [
        "forever stop %(homedir)s/%(blockchain)s-node/app.js",
        "wget -nv %(best_snapshot)s -O %(homedir)s/snapshots/%(database)s",
        "sudo /etc/init.d/postgresql start",
        "sudo -u postgres dropdb --if-exists \"%(database)s\"",
        "sudo -u postgres createdb -O oxycoin \"%(database)s\"",
        "sudo -u postgres psql -q -c \"CREATE USER oxycoin WITH PASSWORD 'password' CREATEDB;\"",
        "gunzip -fcq \"%(homedir)s/snapshots/%(database)s\" | psql -q -h 127.0.0.1 -U oxycoin -d %(database)s"
    ],

    "restart": [
        "forever --plain stop %(homedir)s/%(blockchain)s-node/app.js",
        "forever --plain cleanlogs",
        "forever --plain start -o %(homedir)s/%(blockchain)s-node/logs/oxycoin.log -e %(homedir)s/%(blockchain)s-node/logs/oxycoin-err.log %(homedir)s/%(blockchain)s-node/app.js --config=%(homedir)s/%(blockchain)s-node/config.json"
    ],

    "nodeheight":[
        "export PGPASSWORD=password; psql -d %(database)s -U oxycoin -h localhost -p 5432 -t -c \"SELECT height FROM blocks ORDER BY height DESC LIMIT 1\""
    ],

    "mainnet": {
        "database": "oxycoin_db_main", 
        "snapshots": [
            "https://downloads.oxycoin.io/snapshots/master/latest"
        ], 
        "seeds": [
            "https://wallet.oxynode.net",
            "https://wallet.oxycoin.io",
            "https://corenode1.oxycoin.io",
            "https://corenode2.oxycoin.io",
            "https://corenode3.oxycoin.io"
        ], 
        "peer": "http://localhost:10000"
    },

    "testnet":{
        "database": "oxycoin_db_test", 
        "snapshots": [
            "https://downloads.oxycoin.io/snapshots/testnet/latest"
        ], 
        "seeds": [
            "https://twallet.oxycoin.io"
        ], 
        "peer": "http://localhost:9998"
    }
}